<div class="column_nav">
  <%= button_to "General", settings_path, class: "button main_button_settings", method: :get%>
</div>

<div class="column_content">
  <h1>Settings</h1>
  <h2>Your Account</h2>

  <div id="changeUsernameForm" class="popup_form">
    <%= form_with model: Current.user, url: users_change_name_path, data: { turbo: false } do |f|%>
      <div class="form_field">
        <%= f.label :username %><br />
        <%= f.text_field :username %>
      </div>
      <div class="actions"><%= f.submit "Change Username" %></div>
    <%end %>
  </div>
  <%= javascript_include_tag "/javascripts/user_settings" %> <br>

  <%= button_to "Edit Password", edit_password_path, class: "button main_button", method: :get%>
  <%= button_to "Delete user", destroy_user_path, class: "button main_button", method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }%>
  <%= button_to "Log out", logout_path, class: "button main_button", method: :delete%>
</div>